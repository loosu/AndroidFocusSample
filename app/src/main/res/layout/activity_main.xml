<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7">

                <Button
                    android:id="@+id/btn_focus_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="up"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/btn_focus_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="down"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="@id/btn_focus_up"
                    app:layout_constraintTop_toBottomOf="@id/btn_focus_up" />

                <Button
                    android:id="@+id/btn_focus_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="left"
                    android:textAllCaps="false"
                    app:layout_constraintRight_toLeftOf="@id/btn_focus_up"
                    app:layout_constraintTop_toBottomOf="@id/btn_focus_up" />

                <Button
                    android:id="@+id/btn_focus_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="left"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toRightOf="@id/btn_focus_up"
                    app:layout_constraintTop_toBottomOf="@id/btn_focus_up" />
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_focus_backward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="backward"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_focus_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="forward"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>